[library]
name = "DataFusion GLib"
version = "@VERSION@"
browse_url = "https://github.com/datafusion-contrib/datafusion-c/tree/@SOURCE_REFERENCE@"
repository_url = "https://github.com/datafusion-contrib/datafusion-c.git"
website_url = "https://datafusion-contrib.github.io/datafusion-c/"
authors = "Sutou Kouhei"
license = "Apache-2.0"
description = "DataFusion GLib API"
dependencies = ["GObject-2.0", "Arrow-1.0"]
search_index = true

[dependencies."GObject-2.0"]
name = "GObject"
description = "The base type system library"
docs_url = "https://docs.gtk.org/gobject/"

[dependencies."Arrow-1.0"]
name = "Arrow"
description = "Apache Arrow GLib API"
docs_url = "https://arrow.apache.org/docs/c_glib/arrow-glib/"

[related."datafusion-c"]
name = "DataFusion C"
description = "DataFusion C API"
docs_url = "https://datafusion-contrib.github.io/datafusion-c/@SOURCE_REFERENCE@/"

[source-location]
base_url = "https://github.com/datafusion-contrib/datafusion-c/blob/@SOURCE_REFERENCE@"
